<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    tools:context="com.qrcode.raspberrytvcontrol.InitActivity$PlaceholderFragment" >

    
    
    <ImageButton
        android:id="@+id/togglePlay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/appbartogglepause" />
    
 
    
    <ImageButton
        android:id="@+id/decreaseVol"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/togglePlay"
        android:layout_alignLeft="@+id/togglePlay"
        android:layout_marginTop="24dp"
        android:src="@drawable/appbardecrease"/>
    
     <ImageButton
        android:id="@+id/increaseVol"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/togglePlay"
        android:layout_alignRight="@+id/togglePlay"
        android:layout_marginTop="24dp"
        android:src="@drawable/appbarincrease"/>

    <ImageButton
        android:id="@+id/rwnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/togglePlay"
        android:layout_below="@+id/decreaseVol"
        android:layout_marginTop="24dp"
        android:src="@drawable/appbarrwnd" />

    <ImageButton
        android:id="@+id/ffwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/togglePlay"
        android:layout_alignTop="@+id/rwnd"
        android:src="@drawable/appbarffwd" />
    
    <ImageButton
        android:id="@+id/rwnd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rwnd"
        android:layout_below="@+id/rwnd"
        android:layout_marginTop="24dp"
        android:src="@drawable/appbarrwnd" />

    <ImageButton
        android:id="@+id/ffwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ffwd"
        android:layout_below="@+id/ffwd"
        android:layout_marginTop="24dp"
        android:src="@drawable/appbarffwd" />


    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rwnd2"
        android:layout_alignRight="@+id/ffwd2"
        android:layout_below="@+id/rwnd2"
        android:layout_marginTop="18dp"
        android:src="@drawable/appbarstop" />

</RelativeLayout>